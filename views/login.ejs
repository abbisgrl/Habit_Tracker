<div class="row mt-5">
  <div class="col-md-6 m-auto box_shadow">
    <div class="card card-body">
      <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h3>
      <%- include ("./partials/messages") %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email"><strong>EMAIL</strong></label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <button type="submit" class="btn btn-block blueC">Login</button>
      </form>
      <p class="mt-4"><strong>New User?</strong> <a href="/users/register" class="tColor">Register</a></p>
    </div>
  </div>
</div>
