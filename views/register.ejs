<div class="row mt-5">
  <div class="col-md-6 m-auto box_shadow">
    <div class="card card-body">
      <h3 class="text-center mb-3 ">
        <i class="fas fa-user-plus"></i> REGISTER
      </h3>
      <%- include ("./partials/messages") %>

      <form action="/users/register" method="POST">
        <div class="mt-5 mb-4">
          <label for="name"><strong>NAME</strong></label>
          <input
            type="name"
            id="name"
            required
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div>
          <label for="email"><strong>EMAIL</strong></label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>

        <button type="submit" class="btn btn-block blueC mt-5">
          Register
        </button>
      </form>
      <p class="mt-4"><strong>Returning User?</strong> <a href="/users/login" class="tColor">Login</a></p>
    </div>
  </div>
</div>
